# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/code-to-content

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/callback

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ============================================
# Voice Engine Configuration
# ============================================

# Redis Configuration (Required for Voice Engine)
REDIS_URL=redis://localhost:6379

# Learning Queue Configuration
LEARNING_QUEUE_CONCURRENCY=5          # Number of concurrent learning jobs (default: 5)
LEARNING_RATE_LIMIT_MINUTES=5         # Minutes between profile updates per user (default: 5)
EDIT_BATCH_WINDOW_MINUTES=5           # Minutes to batch rapid edits (default: 5)

# Cache Configuration
PROFILE_CACHE_TTL_SECONDS=3600        # Profile cache duration in seconds (default: 3600 = 1 hour)
EVOLUTION_CACHE_TTL_SECONDS=300       # Evolution score cache duration (default: 300 = 5 min)
ARCHETYPE_CACHE_TTL_SECONDS=86400     # Archetype list cache duration (default: 86400 = 24 hours)

# Profile Management
MAX_EDIT_METADATA_PER_USER=50         # Max stored edits per user (default: 50)
MAX_PROFILE_VERSIONS=10               # Max profile versions for rollback (default: 10)
MIN_TEXT_LENGTH_CHARS=300             # Minimum characters for text analysis (default: 300)
MIN_FILE_LENGTH_CHARS=500             # Minimum characters for file analysis (default: 500)

# Gemini Configuration for Voice Engine
GEMINI_TEMPERATURE=0.8                # Temperature for voice-aware generation (default: 0.8)
GEMINI_MAX_TOKENS=8000                # Max prompt tokens (default: 8000)
GEMINI_RETRY_ATTEMPTS=3               # Number of retry attempts for API failures (default: 3)
GEMINI_RETRY_DELAY_MS=2000            # Initial retry delay in milliseconds (default: 2000)

# Pattern Detection Thresholds
PATTERN_THRESHOLD_SENTENCE_LENGTH=3   # Edits required to detect sentence length pattern (default: 3)
PATTERN_THRESHOLD_EMOJI=3             # Edits required to detect emoji pattern (default: 3)
PATTERN_THRESHOLD_STRUCTURE=3         # Edits required to detect structure pattern (default: 3)
PATTERN_THRESHOLD_COMMON_PHRASE=3     # Edits required to add common phrase (default: 3)
PATTERN_THRESHOLD_BANNED_PHRASE=2     # Edits required to add banned phrase (default: 2)
PATTERN_THRESHOLD_MAJOR_CHANGE=5      # Edit sessions required for major changes (default: 5)

# Rate Limiting Configuration
RATE_LIMIT_DEFAULT=100                # Default rate limit: requests per hour (default: 100)
RATE_LIMIT_STRICT=10                  # Strict rate limit for expensive operations: requests per hour (default: 10)

# Worker Health Check Configuration
WORKER_HEALTH_PORT=3002               # Port for worker health check endpoint (default: 3002)

# Monitoring & Logging
LOG_LEVEL=info                        # Logging level: debug, info, warn, error (default: info)
ENABLE_PERFORMANCE_LOGGING=true       # Log performance metrics (default: true)
ENABLE_LEARNING_LOGGING=true          # Log learning job details (default: true)

